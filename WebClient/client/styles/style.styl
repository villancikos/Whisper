

@import '_normalize.styl'
@import '_typography.styl'
@import '_animations.styl'
@import 'firebaseui.css'

#conversationPanel
    background: #e5e5e5 url(http://i.imgur.com/5QPCSjz.jpg) no-repeat;
    background-size: 100% 100%;
    width: 100%
    height: 100vh
    overflow: scroll

.action-bar
  height: 65px
  background-color: #808080   
 

.add-message-form input[type=text]
    position: fixed
    bottom: 0
    width: 100%
    clear: both
    background-color: white
    height: 3em 
    font-size: 1em

.search-bar
    width: 100%
    display: block
    height: 2.5em 
    font-size: 1em
    border: none
    border-bottom: 2px #9de1fe
    padding: 0 1em

.conversationSidebar
    background-color: white
    height: 100vh
    overflow: scroll
    a
      margin-top: 5px


.speech-whispper
  padding: 5px 30px
  .bubble
    width: 500px
    height: auto
    display: block
    background: #f5f5f5
    border-radius: 7px
    position: relative
    margin: 0 0 12px
    word-wrap: break-word
    -webkit-box-shadow: 0px 2px 1px -1px rgba(0,0,0,0.45)
    -moz-box-shadow: 0px 2px 1px -1px rgba(0,0,0,0.45)
    box-shadow: 0px 2px 1px -1px rgba(0,0,0,0.45)
    &.sender
      margin: 0 0 0 60px
    .bubble-txt
      padding: 7px 55px 8px 14px
      .bubble-name
        font-weight: 600
        font-size: 8px
        margin: 0 0 4px
        color: #3498db
        span
          font-weight: normal
          color: #b3b3b3
        &.sender
          background: #4adca6
          color: #2ecc71
      .bubble-message
        font-size: 16px
        margin: 0
        color: #2b2b2b
      .bubble-timestamp
        font-size: 11px
        position: absolute
        bottom: 8px
        right: 10px
        text-transform: uppercase; color: #999
.bubble-arrow 
  position: absolute
  width: 0
  bottom:42px
  left: -16px
  height: 0
  &.sender
    right: -2px
    bottom: 40px
    left: auto
.bubble-arrow:after 
  content: ""
  position: absolute
  border: 0 solid transparent
  border-top: 9px solid #f5f5f5
  border-radius: 0 20px 0
  width: 15px
  height: 30px
  transform: rotate(145deg)

    
.bubble-arrow.sender:after 
  transform: rotate(45deg) scaleY(-1)
  border-top: 9px solid #7ff7ca
    
  


.bubble.float-right
  background: #7ff7ca

.list-group-item
    border-radius: 0
    
.list-group-item:hover
    background-color:#efefef
    cursor: pointer
    
.list-group-item.active
    background-color: #9de1fe
    border: transparent

.conversation-receiver
    background-color: gray
    color: #ffffff
    position: fixed
    width: 100%   
    height: 65px
    z-index: 9999
    .conversation-profile-pic
      margin: 10px 20px

.conversation-container
  margin-top: 65px

.conversation-sender
  color: #808080
  position: absolute
  top: 8px
  left: 75px
  font-size: 11px
  
.conversation-timestamp
  position: absolute
  top: 5px
  right: 10px
  font-size: 11px

.conversation-last-message  
  color: black
  font-weight: bold
  
.conversation-profile-pic
  height: 45px